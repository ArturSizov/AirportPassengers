<Window x:Class="AirportPassengers.Views.ListDeparturesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AirportPassengers.ViewModels"
        mc:Ignorable="d"
        Height="650" 
        Width="1024"
        FontSize="14"
        DataContext="{Binding Source={StaticResource Locator}, Path=ListDeparturesWindowViewModel}"
        Title="{Binding Title}">
    
    <Grid>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="248"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Margin="2">
                <Label Content="Searc..."/>
            </StackPanel>
            <GroupBox Header="Рейсы" 
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="1">
                <StackPanel
                        MinHeight="655">
                    <ListBox ItemsSource="{Binding Flights}" 
                         SelectedItem="{Binding SelectedFlight}"
                         SelectedIndex="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                BorderBrush="Red" 
                                BorderThickness="1"  
                                CornerRadius="4" Padding="1">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Number, StringFormat=Номер рейса: {0}}"/>
                                        <TextBlock Text="{Binding DepartureTime, StringFormat=Время вылета: {0: H:mmч|dd.MM.yyyy }}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
            </GroupBox>

            <GroupBox Header="Пассажиры"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="1"
                  HorizontalAlignment="Left">
                <StackPanel>
                    <DataGrid CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="2"
                      ItemsSource="{Binding SelectedFlight.Passengers}"
                      AutoGenerateColumns="False" 
                      ColumnHeaderHeight="30" 
                      RowBackground="Transparent"
                      AlternatingRowBackground="AliceBlue"
                      Background="White" RowHeight="25" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="250"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Button Content="Добавить список"
                Command="{Binding LoadingFromFile}"
                Width="120"
                Height="45"
                Margin="5"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"/>
        <Button Content="Сохранить"
                Command="{Binding SaveFile}"
                Width="85"
                Height="45"
                Margin="0,0,130,5"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"/>
        <Button Content="Добавить рейс"
                Command="{Binding OpenAddFlightWindow}"
                Width="130"
                Height="45"
                Margin="5"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"/>
        
    </Grid>
    
</Window>
