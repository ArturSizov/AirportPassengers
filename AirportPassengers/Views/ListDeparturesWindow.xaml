<Window x:Class="AirportPassengers.Views.ListDeparturesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AirportPassengers.ViewModels"
        mc:Ignorable="d"
        Height="650" 
        Width="1024"
        FontSize="14"
        Title="{Binding Title}">
    
    <Window.DataContext>
        <vm:ListDeparturesWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Margin="2">
            <Label Content="Searc..."/>
        </StackPanel>
        <GroupBox Header="Рейсы" 
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="1">
            <StackPanel>
                <ListBox ItemsSource="{Binding Flights}" 
                         SelectedItem="{Binding SelectedFlight}"
                         SelectedIndex="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" 
                                BorderBrush="Red" 
                                BorderThickness="1"  
                                CornerRadius="4" Padding="1">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Number, StringFormat=Номер рейса: {0}}"/>
                                    <TextBlock Text="{Binding DepartureTime, StringFormat=Время отправки: {0}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Пассажиры"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="1"
                  HorizontalAlignment="Left">
            <StackPanel>
                <DataGrid CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="2"
                      ItemsSource="{Binding SelectedFlight.Passengers}"
                      AutoGenerateColumns="False" 
                      ColumnHeaderHeight="30" 
                      RowBackground="Transparent"
                      AlternatingRowBackground="AliceBlue"
                      Background="White" RowHeight="25" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}"/>
                        <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}"/> 
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>
        

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="5"
                    HorizontalAlignment="Right">
            <Button Content="Add"
                    Width="75"
                    Height="25"
                    Margin="2"/>
            <Button Content="Save"
                    Width="75"
                    Height="25"
                    Margin="2"/>
        </StackPanel>
    </Grid>
</Window>
